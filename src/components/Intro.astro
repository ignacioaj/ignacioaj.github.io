---
interface Props {
  name: string;
  subtitle: string;
}

const { name, subtitle } = Astro.props;
---

<section
  class="relative w-full min-h-[70vh] flex items-center justify-center bg-center bg-cover"
  style="
    background-image:
      linear-gradient(to bottom, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      linear-gradient(to bottom, black 0%, black 20px),
      url('/fondo.jpg');
    background-size: cover, cover, 100% 20px, cover;
    background-position: center, center, bottom, center;
    background-repeat: no-repeat, no-repeat, no-repeat, no-repeat;
  "
>
<div class="px-6 md:px-10 lg:px-16">
  <!-- Contenedor centrado y limitado en ancho -->
  <div class="section-content flex flex-col items-center justify-center text-center py-16">
    <!-- Texto principal -->
    <h1 class="font-poppins font-bold text-4xl md:text-6xl text-[#40E0D0] whitespace-normal md:whitespace-nowrap leading-tight">
      &gt;&gt; Unleash the Future Today<span class="cursor">|</span>
    </h1>

    <!-- Cajetas -->
    <div class="mt-10 flex flex-wrap justify-center gap-4">
      <a href="#about" class="card">About Me</a>
      <a href="#certifications" class="card">Certifications</a>
      <a href="#projects" class="card">Projects</a>
      <a href="#interests" class="card">Other Interests</a>
      <a href="#contact" class="card">Contact</a>
    </div>
  </div>
  </div>
  </section>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Roboto:wght@400&display=swap');

    /* Cursor parpadeante */
    .cursor {
      display: inline-block;
      margin-left: 0.1em;
      width: 1ch;
      animation: blink 1s step-start infinite;
    }

    @keyframes blink {
      50% {
        opacity: 0;
      }
    }

    /* Tarjetas reutilizables */
    .card {
      background-color: rgba(64, 224, 208, 0.2);
      color: #40E0D0;
      font-family: 'Roboto', sans-serif;
      font-weight: 400;
      padding: 1rem 2rem;
      border-radius: 12px;
      text-align: center;
      border: 1px solid #40E0D0;
      box-shadow: 0 0 10px rgba(64, 224, 208, 0.6);
      transition: transform 0.3s, box-shadow 0.3s, background-color 0.3s, border-color 0.3s;
      cursor: pointer;
      backdrop-filter: blur(5px);
    }

    .card:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 8px 20px rgba(64, 224, 208, 0.8);
      background-color: rgba(64, 224, 208, 0.35);
      border-color: #40E0D0;
    }

    @media (max-width: 768px) {
      .card {
        flex: 1 1 100%;
        padding: 0.8rem 1.5rem;
      }
    }
  </style>
</section>
