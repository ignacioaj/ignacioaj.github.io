---
// HeroSection.astro
interface Props {
  name?: string;       // Slogan principal opcional
  subtitle?: string;   // Tu nombre opcional
}

const { name, subtitle } = Astro.props;
---

<section
  class="relative w-full min-h-[70vh] flex items-center justify-center bg-center bg-cover"
  style="
    background-image:
      linear-gradient(to bottom, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      linear-gradient(to bottom, black 0%, black 20px),
      url('/fondo.jpg');
    background-size: cover, cover, 100% 20px, cover;
    background-position: center, center, bottom, center;
    background-repeat: no-repeat, no-repeat, no-repeat, no-repeat;
  "
>
  <div class="px-6 md:px-10 lg:px-16">
    <div class="section-content flex flex-col items-center justify-center text-center py-16">

      <!-- Contenedor de flecha SVG + slogan -->
      <div class="flex items-center justify-center gap-4">
        <!-- SVG doble flecha -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="48"
          height="48"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#40E0D0"
          stroke-width="2.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="double-arrow"
        >
          <polyline points="7 7 12 12 7 17"></polyline>
          <polyline points="13 7 18 12 13 17"></polyline>
        </svg>

        <!-- Texto principal -->
        <h1 class="font-poppins font-bold text-4xl md:text-6xl text-[#40E0D0] whitespace-normal md:whitespace-nowrap leading-tight">
          {name || "Unleash the Future Today"}<span class="cursor">|</span>
        </h1>
      </div>

      <!-- Nombre con Roboto -->
      <p class="mt-4 text-xl md:text-2xl text-white font-roboto font-medium opacity-90">
        {subtitle || "Ignacio Atencia Jimenez"}
      </p>

      <!-- Hipervínculos sociales debajo del nombre -->
      <div class="mt-3 flex gap-6 mb-4">
        <!-- LinkedIn -->
        <a href="https://www.linkedin.com/in/ignacio-atencia/" target="_blank" class="social-icon" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#40E0D0" viewBox="0 0 24 24">
            <path d="M4.98 3.5C4.98 4.88 3.88 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM0 8h5v16H0V8zm7.5 0h4.8v2.2h.1c.67-1.27 2.3-2.6 4.75-2.6 5.08 0 6 3.33 6 7.66V24h-5v-7.75c0-1.85-.03-4.23-2.58-4.23-2.58 0-2.97 2.01-2.97 4.09V24h-5V8z"/>
          </svg>
        </a>

        <!-- GitHub -->
        <a href="https://github.com/ignacioaj" target="_blank" class="social-icon" aria-label="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#40E0D0" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.207 11.387.6.113.793-.262.793-.582 0-.288-.012-1.244-.018-2.255-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.744.082-.729.082-.729 1.205.084 1.84 1.238 1.84 1.238 1.07 1.834 2.807 1.304 3.492.997.107-.776.418-1.304.762-1.604-2.665-.305-5.467-1.333-5.467-5.933 0-1.31.468-2.382 1.236-3.222-.124-.303-.536-1.526.117-3.176 0 0 1.008-.322 3.3 1.23a11.52 11.52 0 013.003-.404c1.02.005 2.047.138 3.003.404 2.29-1.552 3.296-1.23 3.296-1.23.655 1.65.243 2.873.12 3.176.77.84 1.236 1.913 1.236 3.222 0 4.61-2.807 5.625-5.48 5.922.43.37.813 1.102.813 2.222 0 1.604-.015 2.897-.015 3.29 0 .323.192.7.8.58C20.565 21.796 24 17.298 24 12c0-6.63-5.37-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Línea separadora justo encima de las tarjetas -->
      <div class="w-full border-t border-white border-opacity-20 mt-2 mb-6"></div>

      <!-- Tarjetas del stack -->
      <div class="flex flex-wrap justify-center gap-4">
        <a href="#about" class="card">About Me</a>
        <a href="#certifications" class="card">Certifications & Courses</a>
        <a href="#projects" class="card">Projects</a>
        <a href="#interests" class="card">Other Interests</a>
        <a href="#contact" class="card">Contact</a>
      </div>

    </div>
  </div>

  <!-- Estilos -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Roboto:wght@500&display=swap');

    /* Cursor parpadeante */
    .cursor {
      display: inline-block;
      margin-left: 0.1em;
      width: 1ch;
      animation: blink 1s step-start infinite;
    }

    @keyframes blink {
      50% { opacity: 0; }
    }

    /* Tarjetas reutilizables estilo transparente */
    .card {
      background-color: rgba(64, 224, 208, 0.05);
      color: #40E0D0;
      font-family: 'Roboto', sans-serif;
      font-weight: 500;
      padding: 1rem 2rem;
      border-radius: 12px;
      text-align: center;
      border: 1px solid rgba(64, 224, 208, 0.3);
      box-shadow: 0 2px 6px rgba(64, 224, 208, 0.2);
      transition: transform 0.3s, box-shadow 0.3s, background-color 0.3s, border-color 0.3s, color 0.3s;
      cursor: pointer;
      backdrop-filter: blur(5px);
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(64, 224, 208, 0.35);
      background-color: rgba(64, 224, 208, 0.1);
      border-color: rgba(64, 224, 208, 0.6);
      color: #40F0E5;
    }

    /* Iconos sociales */
    .social-icon svg {
      transition: transform 0.3s, fill 0.3s;
    }
    .social-icon:hover svg {
      transform: translateY(-3px);
      fill: #40F0E5;
    }

    /* Ajustes responsivos */
    @media (max-width: 768px) {
      .card {
        flex: 1 1 100%;
        padding: 0.8rem 1.5rem;
      }

      /* Flecha y texto apilados en móvil */
      .section-content > div.flex {
        flex-direction: column;
        gap: 1rem;
      }

      /* Nombre y links apilados en móvil */
      .section-content > div.mt-3 {
        flex-direction: column;
        gap: 0.5rem;
      }
    }

    /* Animación opcional para la flecha */
    .double-arrow polyline {
      transition: transform 0.3s;
    }
    .double-arrow:hover polyline {
      transform: translateX(3px);
    }
  </style>
</section>
