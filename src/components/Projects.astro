---
import { Image } from "astro:assets";
import PROJECTS from "../assets/collections/projects.json";
---

<section id="projects" class="relative overflow-hidden">
  <div
    class="px-6 md:px-10 lg:px-16 relative z-10"
    style="
      background-image:
        repeating-radial-gradient(circle at 0 0, rgba(255,255,255,0.03), rgba(255,255,255,0.03) 2px, transparent 2px, transparent 6px),
        linear-gradient(135deg, #1F7D7A, #1A6662);
      background-size: 100% 100%, auto;
      background-position: center;
      background-repeat: no-repeat;
      filter: brightness(0.85) contrast(1.1);
    "
  >
    <!-- Overlay de fundido superior e inferior -->
    <div class="absolute inset-0 pointer-events-none"
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 15%, rgba(0,0,0,0) 85%, rgba(0,0,0,0.8) 100%);"></div>

    <div class="section-content relative z-20 flex flex-col items-center text-center px-4 pt-16 pb-24 max-w-5xl w-full">
      <div class="w-full h-20"></div>

      <!-- Título conservando nueva personalidad pero tipografía original -->
      <div class="relative mb-10">
        <h2 class="text-3xl md:text-5xl font-bold tracking-wide text-white drop-shadow-[0_0_12px_rgba(255,255,255,0.25)] select-none">
          <span class="bg-gradient-to-r from-white via-white to-white bg-clip-text text-transparent">
            Projects
          </span>
        </h2>
        <div class="absolute left-1/2 -translate-x-1/2 -bottom-3 w-32 h-[3px] bg-gradient-to-r from-transparent via-white to-transparent opacity-70 rounded-full"></div>
      </div>

      <!-- Tarjetas de proyectos -->
      <div class="p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 mt-12">
        {PROJECTS.filter((__, i) => i < 3).map((project) => {
          const { name, description, urlImg, link } = project;
          return (
            <a
              href={link}
              target="_blank"
              class="relative flex flex-col items-stretch p-4 group h-full rounded-xl bg-gray-900/60 border border-white/20 shadow-[0_0_15px_rgba(255,255,255,0.05)] backdrop-blur-xl transition-transform transform hover:-translate-y-1 hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)] hover:border-white/40"
            >
              <span class="block w-full h-52 overflow-hidden rounded-lg mb-4">
                <Image
                  loading={Astro.originPathname === "/" ? "lazy" : "eager"}
                  src={urlImg}
                  alt={name}
                  width={300}
                  height={300}
                  class="w-full h-full object-cover object-center rounded-lg transition-transform duration-500 group-hover:scale-105"
                />
              </span>

              <div class="flex flex-col items-start">
                <span class="text-lg font-semibold text-white flex items-center group-hover:text-white/90 transition-all duration-300">
                  {name}
                  <span class="ml-2 w-4 h-4 border-t-2 border-r-2 border-[#4FD1C5] transform rotate-45 transition-all group-hover:translate-x-1 group-hover:-translate-y-1"></span>
                </span>
                <p class="text-sm text-gray-300 mt-1">{description}</p>
              </div>

              <!-- Glow sutil y borde doble elegante -->
              <span class="absolute inset-0 rounded-xl border border-white/5 pointer-events-none"></span>
              <span class="absolute inset-0 rounded-xl bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></span>
            </a>
          );
        })}
      </div>
    </div>
  </div>
</section>