---
import { Image } from "astro:assets";
import PROJECTS from "../assets/collections/projects.json";
---
<section id="projects" class="relative overflow-hidden py-20">
  <!-- Fondo turquesa m치s profundo y con patr칩n sutil -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#0F3B3A] to-[#1AA9A6]">
    <div class="absolute inset-0 bg-[repeating-radial-gradient(circle_at_0_0,_rgba(255,255,255,0.02),_rgba(255,255,255,0.02)_2px,_transparent_2px,_transparent_6px)]"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 md:px-10 lg:px-16">
    <div class="text-center mb-16 relative">
      <h2 class="text-3xl md:text-5xl font-bold tracking-wide text-white drop-shadow-[0_0_6px_rgba(0,0,0,0.5)] select-none transition-transform duration-500 hover:scale-110">
        <span class="bg-gradient-to-r from-white via-white to-white bg-clip-text text-transparent">
          Projects
        </span>
      </h2>
      <div class="absolute left-1/2 -translate-x-1/2 -bottom-4 w-40 h-[4px] bg-gradient-to-r from-transparent via-white to-transparent opacity-70 rounded-full animate-pulse"></div>
    </div>

    <!-- Contenedor con fondo m치s oscuro y borde m치s visible -->
    <div class="relative p-8 rounded-3xl border border-white/30 bg-white/10 shadow-[0_0_25px_5px_rgba(0,0,0,0.35)] backdrop-blur-xl">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
        {PROJECTS.map((project) => {
          const { name, description, urlImg, link } = project;
          return (
            <a
              href={link}
              target="_blank"
              class="relative flex flex-col items-stretch p-5 rounded-2xl bg-white/20 border border-white/30 backdrop-blur-lg shadow-[0_0_20px_rgba(0,0,0,0.25)] hover:scale-105 hover:shadow-[0_0_30px_rgba(79,209,197,0.35)] transition-transform duration-500"
            >
              <div class="w-full h-52 overflow-hidden rounded-xl mb-4">
                <Image
                  loading={Astro.originPathname === "/" ? "lazy" : "eager"}
                  src={urlImg}
                  alt={name}
                  width={300}
                  height={300}
                  class="w-full h-full object-cover object-center rounded-xl transition-transform duration-500 hover:scale-110"
                />
              </div>

              <div class="flex flex-col items-start">
                <h3 class="text-lg font-semibold text-white flex items-center group-hover:text-white/90 transition-all duration-300">
                  {name}
                  <span class="ml-2 w-4 h-4 border-t-2 border-r-2 border-[#4FD1C5] rotate-45"></span>
                </h3>
                <p class="text-sm text-gray-200 mt-1">{description}</p>
              </div>

              <span class="absolute inset-0 rounded-2xl border border-white/20 pointer-events-none"></span>
              <span class="absolute inset-0 rounded-2xl bg-white/10 opacity-0 hover:opacity-30 transition-opacity duration-500 pointer-events-none"></span>
            </a>
          );
        })}
      </div>
    </div>
  </div>
</section>
