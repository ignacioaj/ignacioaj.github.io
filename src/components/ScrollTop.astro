---
/*
  ScrollTop.astro
  - Hidratación en cliente con client:idle
  - Botón visible después de 300px de scroll
  - Smooth scroll al top al hacer click
  - Icono SVG turquesa
  - Accesible con aria-label y title
*/
---
<button id="scroll-top-btn" aria-label="Subir al inicio" title="Subir al inicio">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#2CA3A3" viewBox="0 0 24 24">
    <path d="M12 4l-8 8h6v8h4v-8h6z"/>
  </svg>
</button>

<script type="module" client:idle>
  const btn = document.getElementById('scroll-top-btn');

  if (!btn) throw new Error('ScrollTop: botón no encontrado');

  // estilos iniciales
  btn.style.opacity = '0';
  btn.style.pointerEvents = 'none';
  btn.style.transform = 'translateY(20px)';

  const SHOW_AFTER = 300;

  const updateVisibility = () => {
    if (window.scrollY > SHOW_AFTER) {
      btn.style.opacity = '1';
      btn.style.pointerEvents = 'auto';
      btn.style.transform = 'translateY(0)';
    } else {
      btn.style.opacity = '0';
      btn.style.pointerEvents = 'none';
      btn.style.transform = 'translateY(20px)';
    }
  };

  updateVisibility();
  window.addEventListener('scroll', updateVisibility, { passive: true });

  btn.addEventListener('click', (e) => {
    e.preventDefault();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>

<style>
  #scroll-top-btn {
    position: fixed;
    right: 20px;
    bottom: 20px;
    width: 48px;
    height: 48px;
    border-radius: 9999px;
    border: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.06);
    cursor: pointer;
    z-index: 9999;
    box-shadow: 0 6px 18px rgba(0,0,0,0.6);
    transition: opacity 220ms ease, transform 220ms ease, box-shadow 220ms ease;
    opacity: 0;
    pointer-events: none;
    transform: translateY(20px);
    backdrop-filter: blur(6px);
  }

  #scroll-top-btn svg {
    transition: transform 220ms ease, fill 220ms ease;
    display: block;
  }

  #scroll-top-btn:hover svg {
    transform: translateY(-3px);
    fill: #2CA3A3; /* turquesa hover */
  }

  @media (hover: none) {
    #scroll-top-btn {
      width: 56px;
      height: 56px;
    }

    #scroll-top-btn svg {
      width: 28px;
      height: 28px;
    }
  }
</style>
