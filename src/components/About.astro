---
import Card from "../components/Card.astro";
import TimelineItem from "../components/TimelineItem.astro";
import EXPERIENCES from "../assets/collections/experiences.json";
import profilePicture from "../assets/profile-picture.png";

const { name, subtitle } = Astro.props;
---

<section
  id="about"
  class="relative w-full min-h-[70vh] flex flex-col justify-center bg-center bg-cover"
  style="
    background-image:
      linear-gradient(to bottom, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)),
      url('/fondo-about.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  "
>
  <div class="section-content flex flex-col items-start text-left py-16">

    <!-- Título -->
    <h2
      class="text-2xl md:text-4xl font-bold text-white mb-8"
    >
      About Me
    </h2>

    <!-- Intro -->
    <section class="intro flex justify-start mb-12">
      <div class="content flex items-center gap-8 max-w-3xl w-full text-left">
        <img src={profilePicture.src} alt="Nacho profile picture" class="pfp-square" />
        <div class="text">
          <h2>Who am I?</h2>
          <h1>Hi there! I’m Ignacio</h1>
          <p class="subtitle">{subtitle}</p>
        </div>
      </div>
    </section>

    <!-- Cards / Timeline -->
    <article class="flex flex-col md:flex-row gap-6 w-full max-w-screen-lg">
      <Card className="text-gray-600 dark:text-gray-400 h-fit flex-1">
        <div class="flex flex-col gap-2 text-sm sm:text-base">
          <h3 class="card-title">Short Bio</h3>
          <p class="card-text">
            I’m a Biomedical Engineer fascinated by how the human body works – from tiny molecules to complex organ systems. I love solving problems with code, whether it’s analyzing medical data, processing images, or exploring AI applications in healthcare.
            <br /><br />
            Outside of work, you’ll probably find me experimenting with new tech projects, diving into data science, or learning something new about biology. Currently, I’m enjoying my journey as a Junior Software Specialist at Vodafone Intelligent Solutions, blending my love for medicine and tech every day.
          </p>
        </div>

        <div class="flex flex-col gap-2 mt-4">
          <h3 class="card-title">Want to know a bit more?</h3>
          <a
            href="/docs/cv.pdf"
            role="button"
            aria-label="Download CV"
            download
            class="btn-turquoise w-fit"
          >
            Download CV
          </a>
        </div>
      </Card>

      <Card className="p-8 flex-1">
        <ol class="relative border-s border-gray-300 dark:border-neutral-800">
          {
            EXPERIENCES.map((experience) => (
              <TimelineItem
                title={experience.company}
                description={experience.description}
                date={experience.dates}
              >
                <div
                  slot="icon"
                  class="size-full p-1"
                  set:html={experience.svgIcon}
                />
              </TimelineItem>
            ))
          }
        </ol>
      </Card>
    </article>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Roboto:wght@400&display=swap');

  .section-content {
    @apply w-full max-w-screen-lg mx-auto px-6 md:px-10 lg:px-16;
  }

  .intro {
    padding-top: 2rem;
  }

  .content {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Imagen cuadrada con bordes redondeados y estilo futurista */
  .pfp-square {
    width: 180px;
    height: 180px; /* cuadrada */
    border-radius: 16px;
    border: 3px solid #40e0d0;
    box-shadow: 0 0 15px rgba(64, 224, 208, 0.6), 0 0 30px rgba(64, 224, 208, 0.3);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    object-fit: cover;
  }

  .pfp-square:hover {
    transform: scale(1.05) rotateY(10deg);
    border-color: #ff69b4;
    box-shadow: 0 0 20px rgba(64, 224, 208, 0.8), 0 0 40px rgba(255, 105, 180, 0.4);
  }

  .text {
    flex: 1;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--ctp-text);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1rem;
    color: var(--ctp-subtext0);
    opacity: 0.8;
  }

  .card-title {
    color: #40E0D0;
    font-weight: 600;
  }

  .card-text {
    color: #b9b9b9; /* Blanco ligeramente gris */
  }

  .btn-turquoise {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    font-weight: 600;
    background-color: #2CA3A3;
    color: white;
    border-radius: 0.375rem;
    transition: all 0.3s ease;
  }

  .btn-turquoise:hover {
    background-color: #33cfcf;
  }

  @media (max-width: 768px) {
    .section-content {
      @apply items-center text-center;
    }

    .content {
      flex-direction: column;
      text-align: center;
    }

    .pfp-square {
      width: 140px;
      height: 140px;
    }

    h1 {
      font-size: 1.5rem;
    }
  }
</style>
