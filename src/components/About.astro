---
import Card from "../components/Card.astro";
import TimelineItem from "../components/TimelineItem.astro";
import EXPERIENCES from "../assets/collections/experiences.json";
import profilePicture from "../assets/profile-picture.png";

const { name, subtitle } = Astro.props;
---

<section
  id="about"
  class="relative w-full min-h-[70vh] flex flex-col justify-center bg-center bg-cover overflow-hidden"
  style="
    background-image:
      linear-gradient(to bottom, black, rgba(0,0,0,0)),
      linear-gradient(to top, black, rgba(0,0,0,0)),
      url('/fondo-about.jpg');
    background-size: cover, cover, cover;
    background-position: center;
    background-repeat: no-repeat;
  "
>
  <div class="absolute inset-0 pointer-events-none before-glow"></div>

  <div class="section-content flex flex-col items-center text-center px-4 py-16 md:py-24 max-w-5xl w-full">

    <h2 class="text-3xl md:text-5xl font-bold text-white mb-8 md:mb-16 title-futuristic">
      About Me
    </h2>

    <section class="intro flex flex-col md:flex-row justify-center items-center gap-10 mb-16 relative z-10">
      <img
        src={profilePicture.src}
        alt="Nacho profile picture"
        class="pfp-square"
      />

      <div class="text flex-1 max-w-2xl text-left md:text-left">
        <h2 class="text-cyan-400 text-lg md:text-xl font-semibold mb-1">
          Who am I?
        </h2>

        <h1 class="text-white text-3xl md:text-4xl font-bold mb-3">
          Hi there! I’m Ignacio
        </h1>

        <p class="subtitle text-gray-300">
          {subtitle}
        </p>

        <div class="tech-stack flex flex-wrap gap-4 mt-6 justify-start">
          {[
            { src: "https://www.svgrepo.com/show/452091/python.svg", title: "Python" },
            { src: "https://www.r-project.org/logo/Rlogo.svg", title: "R" },
            { src: "https://www.svgrepo.com/show/331760/sql-database-generic.svg", title: "SQL" },
            { src: "https://upload.wikimedia.org/wikipedia/commons/0/05/Scikit_learn_logo_small.svg", title: "Scikit-learn" },
            { src: "https://www.svgrepo.com/show/306843/tensorflow.svg", title: "TensorFlow / Keras" },
            { src: "https://www.svgrepo.com/show/306830/tableau.svg", title: "Tableau" },
            { src: "https://www.svgrepo.com/show/303548/git-icon-logo.svg", title: "Git" }
          ].map(tech => (
            <div class="tech-icon-wrapper" title={tech.title}>
              <img src={tech.src} alt={tech.title} class="tech-icon" />
            </div>
          ))}
        </div>
      </div>
    </section>

    <article class="flex flex-col md:flex-row gap-6 w-full max-w-screen-lg z-10">

      <Card className="text-gray-600 dark:text-gray-400 h-fit flex-1">
        <div class="flex flex-col gap-2 text-sm sm:text-base">
          <h3 class="card-title text-center">
            Short Bio
          </h3>

          <p class="card-text">
            I’m a Biomedical Engineer fascinated by the human body – from molecules to complex organ systems –
            and by the ways technology can help us understand and improve it.
            I enjoy solving problems with code, whether analyzing medical data, processing images,
            or exploring AI applications in healthcare.
            <br /><br />
            I graduated in Biomedical Engineering from the University of Málaga,
            balancing strong academics with hands-on experiences that shaped my professional path.
            <br /><br />
            During an Erasmus stay in Finland, I had the chance to work with EEG and ECG signals for pathology detection,
            which sparked my interest in signal processing.
            In my bachelor’s thesis, I applied AI techniques to identify radiation-induced chromosomal abnormalities in micrographs.
            <br /><br />
            I want to keep growing in the medical technology field—especially in medical data science, imaging,
            and AI-driven solutions—because that’s the kind of contribution I want to make to the world:
            using technology to genuinely improve people’s care and well-being.
          </p>

          <div class="signature">Ignacio</div>
        </div>

        <br /><br />

        <div class="flex flex-col gap-2 mt-4">
          <h3 class="card-title text-center">Want to know a bit more?</h3>
          <div class="flex justify-center mt-2">
            <a
              href="/docs/cv.pdf"
              role="button"
              aria-label="Download CV"
              download
              class="btn-turquoise"
            >
              Download CV
            </a>
          </div>
        </div>
      </Card>

      <Card className="p-8 flex-1">
        <h3 class="card-title mb-4">My Experiences</h3>

        <ol class="relative border-s border-gray-300 dark:border-neutral-800">
          {EXPERIENCES.map((experience) => (
            <TimelineItem
              title={experience.company}
              description={experience.description}
              date={experience.dates}
            >
              <div
                slot="icon"
                class="size-full p-1"
                set:html={experience.svgIcon}
              />
            </TimelineItem>
          ))}
        </ol>
      </Card>
    </article>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Roboto:wght@400&family=Allura&display=swap');

  .section-content {
    @apply w-full max-w-screen-lg mx-auto px-6 md:px-10 lg:px-16;
  }

  .pfp-square {
    width: 180px;
    height: 180px;
    border-radius: 16px;
    border: 3px solid #40e0d0;
    box-shadow: 0 0 15px rgba(64, 224, 208, 0.6), 0 0 30px rgba(64, 224, 208, 0.3);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    object-fit: cover;
  }

  .pfp-square:hover {
    transform: scale(1.05) rotateY(10deg);
    border-color: #ff69b4;
    box-shadow: 0 0 20px rgba(64, 224, 208, 0.8), 0 0 40px rgba(255, 105, 180, 0.4);
  }

  .text { flex: 1; }

  .subtitle { font-size: 1rem; color: var(--ctp-subtext0); opacity: 0.8; }

  .tech-stack { display: flex; flex-wrap: wrap; gap: 1rem; margin-top: 1rem; }

  .tech-icon-wrapper {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.4);
    border: 2px solid rgba(64, 224, 208, 0.8);
    backdrop-filter: blur(4px);
    box-shadow: 0 0 10px rgba(64, 224, 208, 0.3), inset 0 0 10px rgba(64, 224, 208, 0.15);
    transition: transform 0.5s ease, box-shadow 0.5s ease, border-color 0.5s ease;
  }

  .tech-icon-wrapper:hover {
    transform: rotateY(360deg) scale(1.15);
    border-color: #ff69b4;
    box-shadow: 0 0 20px rgba(255, 105, 180, 0.5), inset 0 0 10px rgba(64, 224, 208, 0.2);
  }

  .tech-icon {
    width: 28px;
    height: 28px;
    object-fit: contain;
  }

  .tech-icon[src*="tensorflow"],
  .tech-icon[src*="tableau"] { filter: invert(1) hue-rotate(180deg); }

  .card-title { color: #40E0D0; font-weight: 600; }

  .card-text { color: #b9b9b9; }

  .btn-turquoise {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    font-weight: 600;
    background-color: #2CA3A3;
    color: white;
    border-radius: 0.25rem;
    transition: all 0.3s ease;
  }

  .btn-turquoise:hover { background-color: #33cfcf; }

  .signature {
    font-family: 'Allura', cursive;
    font-size: 1.65rem;
    color: white;
    text-align: right;
    margin-top: 1rem;
    margin-right: 1rem;
    opacity: 0.9;
  }

  .title-futuristic { position: relative; display: inline-block; }

  .title-futuristic::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 50%;
    height: 4px;
    background: linear-gradient(90deg, #0ff, #2CA3A3);
    border-radius: 2px;
    transform: skewX(-20deg);
    transition: width 0.3s ease;
  }

  .title-futuristic:hover::after { width: 70%; }

  .before-glow::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 10%;
    left: 10%;
    background: radial-gradient(circle at center, rgba(0,255,255,0.2), transparent 60%);
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .section-content { @apply items-center text-center; }
    .pfp-square { width: 140px; height: 140px; }
    h1 { font-size: 1.5rem; }
    .tech-icon-wrapper { width: 50px; height: 50px; }
    .tech-icon { width: 24px; height: 24px; }
    .signature { text-align: center; }
  }
</style>
