---
export interface Props {
  sequence: string;
}

const { sequence } = Astro.props;
const length = sequence.length;
const center = (length - 1) / 2;

// Función para generar color turquesa -> negro según la posición
const getColor = (i: number) => {
  const distance = Math.abs(i - center) / center; // 0 en el centro, 1 en extremos
  const lightness = 100 - 70 * distance; // 100% en centro, 30% en extremos
  return `hsl(180, 100%, ${lightness}%)`;
};
---

<div class="divider">
  {sequence.split("").map((char, i) => (
    <span style={`color: ${getColor(i)}`}>{char}</span>
  ))}
</div>

<style>
.divider {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  padding: 2rem 0;
  font-family: monospace;
  font-size: 1.5rem;
}

.divider span {
  transition: transform 0.2s ease, color 0.2s ease;
}

.divider span:hover {
  transform: scale(1.4);
  color: hsl(180, 100%, 70%);
}
</style>
