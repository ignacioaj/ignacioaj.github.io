---
// Layout.astro
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title><slot name="title" /> | Portfolio</title>
    <meta name="description" content="A minimalist web developer portfolio built with Astro and TailwindCSS" />
  </head>

  <body class="bg-[#000000] text-white">

    <slot name="fullwidth" />
    <slot name="divider" />

    <main class="max-w-screen-lg mx-auto p-6 flex flex-col gap-12">
      <slot />
    </main>

    <Footer />

    <style is:global>
      /* Reset de m√°rgenes y paddings globales */
      html, body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      *, *::before, *::after {
        box-sizing: inherit;
      }

      /* Scroll suave */
      * {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
